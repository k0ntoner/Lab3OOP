
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поле для відображення введеного виразу та результату -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="24sp"
        android:background="#EEEEEE"
        android:padding="16dp"
        android:text="0" />

    <!-- Кнопки калькулятора -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:layout_marginTop="16dp">

        <!-- Числові кнопки -->
        <Button android:text="7" android:onClick="onButtonClick" />
        <Button android:text="8" android:onClick="onButtonClick" />
        <Button android:text="9" android:onClick="onButtonClick" />
        <Button android:text="/" android:onClick="onButtonClick" />

        <Button android:text="4" android:onClick="onButtonClick" />
        <Button android:text="5" android:onClick="onButtonClick" />
        <Button android:text="6" android:onClick="onButtonClick" />
        <Button android:text="*" android:onClick="onButtonClick" />

        <Button android:text="1" android:onClick="onButtonClick" />
        <Button android:text="2" android:onClick="onButtonClick" />
        <Button android:text="3" android:onClick="onButtonClick" />
        <Button android:text="-" android:onClick="onButtonClick" />

        <Button android:text="C" android:onClick="onButtonClick" />
        <Button android:text="0" android:onClick="onButtonClick" />
        <Button android:text="=" android:onClick="onButtonClick" />
        <Button android:text="+" android:onClick="onButtonClick" />

        <!-- Наукові кнопки -->
        <Button android:text="sin(" android:onClick="onButtonClick" />
        <Button android:text="cos(" android:onClick="onButtonClick" />
        <Button android:text="log(" android:onClick="onButtonClick" />
        <Button android:text="√" android:onClick="onButtonClick" />
        <Button android:text=")" android:onClick="onButtonClick" />
        <Button android:text="(" android:onClick="onButtonClick" />

    </GridLayout>
</LinearLayout>